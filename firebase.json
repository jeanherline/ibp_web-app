{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "createGoogleMeet"  
      },
      {
        "source": "**",
        "destination": "/index.html" 
      }
    ]
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "*.local"
    ],
    "runtime": "nodejs18"
  },
  "emulators": {
    "functions": {
      "port": 8081 
    }
  }
}
