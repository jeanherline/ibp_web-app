{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin"
          },
          {
            "key": "Cross-Origin-Embedder-Policy",
            "value": "require-corp"
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, PUT, DELETE, OPTIONS"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "*.local",
      ".env",
      "firebase-debug.*"
    ],
    "runtime": "nodejs18", 
    "region": "us-central1",
    "env": {
      "NODE_ENV": "production"
    },
    "concurrency": 80,
    "cpu": 1,         
    "memory": "512MB",
    "timeoutSeconds": 300 
  },
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "localhost"
    },
    "hosting": {
      "port": 5000,
      "host": "localhost"
    }
  }
}
