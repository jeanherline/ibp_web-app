{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|otf)",
        "headers": [
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin"
          },
          {
            "key": "Cross-Origin-Embedder-Policy",
            "value": "require-corp"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "*.local",
      ".env",
      "firebase-debug.*"
    ],
    "runtime": "nodejs18",
    "region": "us-central1",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "localhost"
    },
    "hosting": {
      "port": 5000,
      "host": "localhost"
    }
  }
}
