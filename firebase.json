{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "*.local",
      ".env",
      "firebase-debug.*"
    ],
    "runtime": "nodejs18",
    "region": "us-central1"
  },
  "emulators": {
    "functions": {
      "port": 5001, 
      "host": "localhost"
    },
    "hosting": {
      "port": 5000,
      "host": "localhost"
    }
  }
}
